<h1>Edit This Collector</h1>

<form action="/users/{{user._id}}?_method=PUT" method="POST">
    <div>Name: <input type='text' name='name' value="{{user.name}}"></div>
    <div><input type='submit' value='Update Collector'></div>
</form>

<button class="edit" id="delete">Delete</button>

<a class="edit" href="/users/{{user._id}}">Cancel</a>

<!-- delete modal -->
<div class="modal closed" id="delete-modal">
    <h4>Are you sure you want to delete this collector?</h4>

    <form action="/users/{{user._id}}?_method=DELETE" method="POST">
        <div><input id="delete" type='submit' value='Delete Collector'></div>
    </form>
</div>

<div class="modal-overlay closed" id="delete-modal-overlay">
</div>
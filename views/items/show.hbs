<a href="/users/{{userId}}/collections/{{collectionId}}"><< All Items</a>

<h1>{{item.name}}</h1>
<a href="/users/{{userId}}/collections/{{collectionId}}/items/{{item._id}}/edit">Edit</a>

<div class="info">
    <img src="{{item.refAddress}}" alt="Item Reference">
    <h4>From: {{item.origin}}</h4>
    <h4>Collected in: {{item.getYear}}</h4>
    <h4>Note: {{item.note}}</h4>
    <h4>Gift: {{item.isGift}}</h4>
</div>

<form action="/users/{{userId}}/collections/{{collectionId}}/items/{{item._id}}?_method=DELETE" method="POST">
<div><input type='submit' value='Delete Item?'></div>
</form>